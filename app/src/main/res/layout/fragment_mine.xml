<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:padding="20dp"
        android:background="@color/title_bar_bg_color">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_avatar"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:onClick="toLogin"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/hline_view"/>

            <RelativeLayout
                android:id="@+id/guanzhu_teacher_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:clickable="true"
                android:onClick="toGuanzhuTeacher"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@mipmap/attention_teacher"
                    android:drawablePadding="5.0dip"
                    android:text="我关注的讲师"
                    android:textColor="@color/seting_text_color"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/common_arrow"/>
            </RelativeLayout>

            <include layout="@layout/hline_view"/>

            <RelativeLayout
                android:id="@+id/push_msg_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@mipmap/push_remind"
                    android:drawablePadding="5.0dip"
                    android:text="推送消息提醒"
                    android:textColor="@color/seting_text_color"
                    android:textSize="14sp"/>

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:button="@drawable/push_msg_control_selector"
                    android:checked="true"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:layout_marginBottom="10dp"
                android:background="@color/line_bj_color"/>

            <include layout="@layout/hline_view"/>

            <RelativeLayout
                android:id="@+id/feed_back_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:clickable="true"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@mipmap/feedback"
                    android:drawablePadding="5.0dip"
                    android:text="意见反馈"
                    android:textColor="@color/seting_text_color"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/common_arrow"/>
            </RelativeLayout>

            <include layout="@layout/hline_view"/>

            <RelativeLayout
                android:id="@+id/seting_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:padding="15dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="账户设置"
                    android:textColor="@color/seting_text_color"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/common_arrow"/>
            </RelativeLayout>

            <include layout="@layout/hline_view"/>

            <RelativeLayout
                android:id="@+id/abouts_us_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:clickable="true"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@mipmap/about_us"
                    android:drawablePadding="5.0dip"
                    android:text="关于我们"
                    android:textColor="@color/seting_text_color"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/common_arrow"/>
            </RelativeLayout>

            <include layout="@layout/hline_view"/>

            <RelativeLayout
                android:id="@+id/check_app_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:clickable="true"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@mipmap/check_version"
                    android:drawablePadding="5.0dip"
                    android:text="版本检测"
                    android:textColor="@color/seting_text_color"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/common_arrow"/>
            </RelativeLayout>

            <include layout="@layout/hline_view"/>

            <RelativeLayout
                android:id="@+id/to_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:clickable="true"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@mipmap/share"
                    android:drawablePadding="5.0dip"
                    android:text="我要分享"
                    android:textColor="@color/seting_text_color"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/common_arrow"/>
            </RelativeLayout>

            <include layout="@layout/hline_view"/>

            <RelativeLayout
                android:id="@+id/to_evaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:clickable="true"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@mipmap/evaluate"
                    android:drawablePadding="5.0dip"
                    android:text="给评分"
                    android:textColor="@color/seting_text_color"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/common_arrow"/>
            </RelativeLayout>

            <include layout="@layout/hline_view"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
